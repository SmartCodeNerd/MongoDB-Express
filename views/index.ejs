<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Mini Whatsapp</title>
    <link rel="stylesheet" href="/style.css">
</head>
<body>
    <h1>All Chats!</h1>
    <form method="GET" action="/chats/new">
        <button>New Chat</button>
    </form>
    <% for(chat of chats) { %>
        <div class="chat">
            <h2> <i><%= chat.from %></i> </h2>
            <div class="msg">
                <h3><%= chat.msg %></h3>
            </div>
            <h2 class="to"> <i><%= chat.to %></i> </h2>
            <p> <%=(chat.createdAt).toString().split(" ")[4]%> </p>
            <p> <%=(chat.createdAt).toString().split(" ").slice(0,4).join("-")%> </p>
            
            <div class="btns">

                <form method="GET" action="/chats/<%=chat._id%>/edit">
                    <button>Edit Chat</button>
                </form>
    
                
                <form method="POST" action="/chats/<%=chat._id%>?_method=DELETE">
                    <button>Delete Chat</button>
                </form>
            </div>
        </div>

        <hr>
        <% } %>
</body>
<script src="/app.js"></script>
</html>